<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="VoiceAI Automation Test Suite" verbose="1" parallel="none" thread-count="1">

    <!-- Listeners for Allure Reporting -->
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <!-- API Tests -->
    <test name="API Tests">
        <classes>
            <class name="com.voiceai.automation.tests.SampleApiTest"/>
        </classes>
    </test>

    <!-- Normal Conversation Tests -->
    <test name="Normal Conversation Tests">
        <classes>
            <class name="com.voiceai.automation.tests.NormalConversationTests"/>
        </classes>
    </test>

    <!-- Edge Case Tests -->
    <test name="Edge Case Tests">
        <classes>
            <class name="com.voiceai.automation.tests.EdgeCaseTests"/>
        </classes>
    </test>

    <!-- Hallucination Tests -->
    <test name="Hallucination Tests">
        <classes>
            <class name="com.voiceai.automation.tests.HallucinationTests"/>
        </classes>
    </test>

    <!-- Latency Tests -->
    <test name="Latency Tests">
        <classes>
            <class name="com.voiceai.automation.tests.LatencyTests"/>
        </classes>
    </test>

    <!-- End-to-End Tests -->
    <test name="End-to-End Tests">
        <classes>
            <class name="com.voiceai.automation.tests.EndToEndTests"/>
        </classes>
    </test>

